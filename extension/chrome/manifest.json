{
  "background": {
    "persistent": false,
    "scripts": [
      "js/build/background.min.js"
    ]
  },
  "minimum_chrome_version": "28",
  "content_scripts": [
    {
      "css": [
        "css/styles.css",
        "bower_components/pikaday/css/pikaday.css"
      ],
      "js": [
        "bower_components/lodash/dist/lodash.min.js",
        "bower_components/jquery/dist/jquery.min.js",

        "bower_components/moment/min/moment.min.js",
        "bower_components/pikaday/pikaday.js",

        "bower_components/yepnope/yepnope.1.5.4-min.js",
        "js/build/bootstrap.min.js",

        "bower_components/eventr/build/eventr.min.js",
        "bower_components/gmailui/build/gmailui.min.js",
        "js/build/content.min.js"
      ],
      "matches": [
        "*://mail.google.com/*"
      ],
      "permissions": [
        "*://mail.google.com/*"
      ]
    }
  ],
  "default_locale": "en",
  "description": "__MSG_extTeaser__",
  "icons": {
    "16" : "images/tie16x16.png",
    "32" : "images/tie32x32.png",
    "48" : "images/tie48x48.png",
    "128": "images/tie128x128.png",
    "256": "images/tie256x256.png"
  },
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "short_name": "MailFred",
  "options_page": "html/options.html",
  "permissions": [
    "storage",
    "notifications",

    "https://www.google.com/accounts/*",
    "https://accounts.google.com/*",
    "https://mailfred-app.appspot.com/*",

    "https://sodium-hue-766.appspot.com/*",
    "http://localhost:8080/*"
  ],
  "version": "2.0.0",
  "web_accessible_resources": [
    "images/*",
    "bower_components/jquery/dist/jquery.min.js",
    "bower_components/jquery-deparam/jquery.ba-deparam.min.js",
    "bower_components/gmailr/build/gmailr.min.js",
    "js/build/mediator.min.js",
    "bower_components/*.map",
    "js/build/*.map",
    "js/src/*.coffee",
    "bower_components/*.coffee"
  ]
}
