<project name="MailButler" default="dist" basedir=".">
    <description>
        Packages the mailbutler browser extensions
    </description>

    <target name="chrome">
    	<delete file="chrome.zip" failonerror="false"/>
    	<zip destfile="chrome.zip" update="true" basedir="chrome" filesonly="true" excludes="
    		**/*.less,
    		**/*.coffee,
    		**/Cakefile,
    		**/*.svg,
    		js/lib/**/*
    		">

    		<zipfileset dir="chrome/js/lib" prefix="/js/lib">
    			<include name="*.js"/>
				<include name="underscore/underscore-min.js"/>
				<include name="jquery/jquery.min.js"/>

				<include name="jquery-ui/development-bundle/themes/base/*.css"/>
				<include name="jquery-ui/js/jquery-ui-1.8.24.custom.min.js"/>
			
    		</zipfileset>
    	</zip>
    </target>

    <target name="dist" depends="chrome">
    </target>
</project>