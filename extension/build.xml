<project name="MailButler" default="dist" basedir=".">
    <description>
        Packages the mailbutler browser extensions
    </description>

    <target name="chrome">
    	<delete file="chrome.zip" failonerror="false"/>
    	<zip destfile="chrome.zip" update="true" basedir="chrome" filesonly="true" excludes="
    		**/*.less,
    		**/*.coffee,
    		**/Cakefile,
    		**/*.svg,
    		js/lib/underscore/**/*,
    		js/lib/jquery/**/*
    		">

    		<zipfileset dir="chrome/js/lib/underscore" prefix="/js/lib/underscore">
				<include name="underscore-min.js"/>
    		</zipfileset>

    		<zipfileset dir="chrome/js/lib/jquery" prefix="/js/lib/jquery">
				<include name="jquery.min.js"/>
    		</zipfileset>
    	</zip>
    </target>

    <target name="dist" depends="chrome">
    </target>
</project>